<%= render 'shared/navbar' %>
<div class="banner-login" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1486768801215-35f4fdd73abc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="form-login">
    <h2>Ingresar</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions pt-3 pb-3">
      <%= f.button :submit, "Log In", class: 'btn-primary btn-block' %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>
